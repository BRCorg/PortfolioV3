{
  "name": "portfoliov2/project",
  "description": "Portfolio project with PSR-4 autoloading",
  "type": "project",
  "autoload": {
    "psr-4": {
      "App\\": "src/",
      "Config\\": "Config/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require": {
    "vlucas/phpdotenv": "^5.6",
    "phpmailer/phpmailer": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },
  "scripts": {
    "test": "phpunit",
    "test-coverage": "phpunit --coverage-html coverage"
  }
}
